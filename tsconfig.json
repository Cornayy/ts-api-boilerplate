{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "moduleResolution": "node"
    },
    "include": ["src", "types/types.ts"],
    "exclude": ["node_modules", "dist", "/**/*.spec.ts"]
}
